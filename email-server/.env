# 邮件服务环境配置

# 邮件服务类型选择 
EMAIL_SERVICE=test_mode
# EMAIL_SERVICE=sendgrid

# SendGrid 配置 (推荐用于生产环境)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Gmail SMTP配置 (用于真实邮件发送) 
EMAIL_USER=healthypathway.demo@gmail.com
EMAIL_APP_PASSWORD=demo-test-password

# 其他SMTP服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=healthypathway.demo@gmail.com
SMTP_PASS=demo-test-password

# 启用测试模式 - 模拟邮件发送成功
TEST_MODE=true
DEMO_MODE=true
LOG_EMAILS=true

# 发送邮件的地址和名称
FROM_EMAIL=noreply@healthypathway.com
FROM_NAME=Healthy Pathway

# 管理员邮箱（接收联系表单和通知）
ADMIN_EMAIL=admin@healthypathway.com

# 服务器端口
PORT=3001
